		"CPU": 			1,
		"CPU_COUNT":	2,
		"24I_COUNT":	3,
		"16I_COUNT":	4,
		"CHASSIS_SIZE": 5,
		"SSD_CHECK":	6,
		"SYS_MODEL_STR":7	
	}

	product_lut = {
		"Storinator-H16-Q30-Enhanced-AMD":	["H11SSL-i","AMD EPYC 7281",1,1,1,"Q30",False,"Storinator Hybrid 16 (AMD)"],
		"Storinator-H16-S45-Enhanced-AMD":	["H11SSL-i","AMD EPYC 7281",1,1,2,"S45",False,"Storinator Hybrid 16 (AMD)"],
