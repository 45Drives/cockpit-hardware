		"Storinator-H32-XL60-Enhanced-AMD":	["H11SSL-i","AMD EPYC 7281",1,2,2,"XL60",False,"Storinator Hybrid 32 (AMD)"],

		"Storinator-AV15-Turbo":		["X11DPL-i","Intel(R) Xeon(R) Silver 4110 CPU @ 2.10GHz",2,0,1,"AV15",False,"Storinator (Turbo)"],
