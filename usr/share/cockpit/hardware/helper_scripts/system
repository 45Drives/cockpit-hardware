# supported motherboard manufacturers and models can be adjusted here
g_dmi_mobo_fields = {
	"Manufacturer":  ["Supermicro"],
	"Product Name":  ["X11DPL-i","X11SPL-F"],
	"Serial Number": None
}

#supported CPU types
g_dmi_cpu_fields = {
	"Socket Designation":  ["CPU1","CPU2"],
	"Version":  ["Intel(R) Xeon(R) Silver 4110 CPU @ 2.10GHz"],
	"Current Speed": None,
	"Max Speed": None,
}

